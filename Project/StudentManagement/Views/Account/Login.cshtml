@model Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="card mb-3">

    <div class="card-body">

        <div class="pt-4 pb-2">
            <img src="~/images/imagebus.png" alt="Alternate Text" />
        </div>

        <form class="row g-3 needs-validation" asp-controller="Account" asp-action="Login" method="post">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-octagon me-1"></i>
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="col-12">
                <label for="validationCustom03" class="form-labe"><strong>ユーザーネーム</strong></label>
                <div class="input-group has-validation">
                    <input type="text" asp-for="Username" class="form-control  shadow-none" id="validationCustom03">
                    <span style="width:100%" asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                <label for="yourPassword" class="form-label"><strong>パスワード</strong></label>
                <input type="password" asp-for="Password" class="form-control  shadow-none" id="password" value="Asdf1234!">
                <span  style="width:100%" asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">私を覚えてますか</label>
                </div>
            </div>
            <div class="col-12 row">
                <div class="col-lg-12 text-center">
                    <button class="btn btn-info rounded-pill" type="submit">
                        ログイン
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    <style>
        .btn-info {
            color: white;
            background-color: #1180d9;
            border-color: #075f81;
        }
    </style>
}